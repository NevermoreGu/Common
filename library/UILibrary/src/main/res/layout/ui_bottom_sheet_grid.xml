<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_config_color_white"
    android:orientation="vertical"
    android:paddingTop="?attr/ui_bottom_sheet_grid_padding_vertical"
    android:paddingBottom="?attr/ui_bottom_sheet_grid_padding_vertical"
    tools:ignore="Overdraw">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:clipToPadding="false">

        <!-- 只有第一行时会在代码中去掉paddingBottom -->
        <LinearLayout
            android:id="@+id/bottom_sheet_first_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="?attr/ui_bottom_sheet_grid_line_padding_horizontal"
            android:paddingRight="?attr/ui_bottom_sheet_grid_line_padding_horizontal"
            android:paddingBottom="?attr/ui_bottom_sheet_grid_line_vertical_space"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/bottom_sheet_second_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="?attr/ui_bottom_sheet_grid_line_padding_horizontal"
            android:paddingRight="?attr/ui_bottom_sheet_grid_line_padding_horizontal"
            android:orientation="horizontal"/>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/bottom_sheet_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/ui_bottom_sheet_grid_padding_vertical"
        android:background="?attr/ui_bottom_sheet_button_background"
        android:orientation="horizontal">

        <com.ui.alpha.UIAlphaTextView
            android:id="@+id/bottom_sheet_close_button"
            android:layout_width="match_parent"
            android:layout_height="?attr/ui_bottom_sheet_button_height"
            android:gravity="center"
            android:text="关 闭"
            android:textColor="?attr/ui_bottom_sheet_button_text_color"
            android:textSize="?attr/ui_bottom_sheet_button_text_size"/>

    </LinearLayout>

</LinearLayout>