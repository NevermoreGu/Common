<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/ui_big_dialog_bg"
              android:elevation="@dimen/ui_offset_2"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_sub_tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ui_offset_32"
        android:layout_marginTop="@dimen/ui_offset_16"
        android:layout_marginRight="@dimen/ui_offset_32"
        android:layout_marginBottom="@dimen/ui_offset_16"
        android:gravity="center_horizontal"
        android:textColor="@color/ui_dark_config_color_one_text"
        android:textSize="@dimen/ui_font_size_18"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ui_offset_32"
        android:layout_marginTop="@dimen/ui_offset_40"
        android:layout_marginRight="@dimen/ui_offset_32"
        android:layout_marginBottom="@dimen/ui_offset_40"
        android:gravity="center_horizontal"

        android:textColor="@color/ui_dark_config_color_three_text"
        android:textSize="@dimen/ui_font_size_16"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_offset_1_px"
        android:background="@color/ui_config_color_line"></View>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_offset_44"
        android:orientation="horizontal">

        <Button
            android:visibility="gone"
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ui_big_dialog_bg"
            android:text="取消"
            android:textColor="@color/ui_dark_config_color_three_text"
            android:textSize="@dimen/ui_font_size_16"/>


        <View
            android:visibility="gone"
            android:layout_width="@dimen/ui_offset_1_px"
            android:layout_height="match_parent"
            android:background="@color/ui_config_color_line"></View>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ui_big_dialog_bg"
            android:text="确定"
            android:textColor="@color/ui_config_color_main"
            android:textSize="@dimen/ui_font_size_16"/>
    </LinearLayout>
</LinearLayout>
